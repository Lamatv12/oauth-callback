{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "test",
      "type": "bun",
      "request": "launch",
      "args": ["test", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "test"
      },
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "stopOnEntry": false
    }
  ]
}
